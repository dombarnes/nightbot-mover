source 'https://rubygems.org/'
ruby '~> 2.7.0'
# App Stack
gem 'sinatra', '~> 2.2.0', require: 'sinatra/base'
gem 'sinatra-contrib'
gem 'sinatra-initializers'
gem 'sinatra-flash'
gem 'sinatra-cross_origin'
gem 'activesupport'
gem 'json'
gem 'oauth2', '~> 1.4.4'
# Database Stack
gem 'httparty'
gem 'puma'

# Performance Monitoring
gem 'airbrake'

gem 'rake'
gem 'uglifier'
gem 'dotenv'
gem 'pry'
gem 'rb-readline'

# JS pipeline
gem 'sinatra-asset-pipeline', '~> 2.2.0'

gem 'pkg-config'
gem 'awesome_print'
gem 'bundler-audit'

group :development do
  gem 'sassc'
  gem 'annotate'
  gem 'pry-byebug'
  gem 'bullet'
  gem 'rdoc'
end

group :development, :test do
  gem 'rspec', '~> 3.0'
  gem 'rack-test'
  gem 'capybara'
end
